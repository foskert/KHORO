<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBlanco"
              android:orientation="vertical"
              android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_img_icono_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/icouserdetalle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_text_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textColor="?attr/actionModeSplitBackground"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/id_text_tiempo_agregado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=" 2 min ago"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:gravity="right|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_img_configuracion"
                android:layout_width="60dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/icokey"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/id_img_lc_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/noimagen"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.85"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.6"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_img_like"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/griskhoro"/>

            <TextView
                android:id="@+id/id_text_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="453"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/id_img_comentario"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/griscomentario"/>

            <TextView
                android:id="@+id/id_text_comentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="456"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.4"
            android:gravity="right|center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_img_tiempo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/gristime"/>

            <TextView
                android:id="@+id/id_text_tiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="23 min"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>